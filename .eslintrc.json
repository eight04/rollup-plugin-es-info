{
	"env": {
		"node": true,
		"es6": true
	},
	"rules": {
		"dot-notation": 2,
		"max-statements-per-line": 2,
		"no-console": 1,
    "prefer-const": 2,
		"quotes": [2, "double", "avoid-escape"],
		"semi": [2, "always"]
	},
	"extends": [
		"eslint:recommended"
	],
  "parserOptions": {
    "ecmaVersion": "latest"
  }
}
